<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nawanolza" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/button</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- 다이얼로그 버튼 커스텀   -->
    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AppAlertButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppAlertButtonStyle2</item>
    </style>

    <style name="AppAlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppAlertButtonStyle2" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#bdbdbd</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>