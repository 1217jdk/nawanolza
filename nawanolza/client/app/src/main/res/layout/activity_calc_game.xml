<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cal_background"
    tools:context=".minigame.CalcGameActivity">


  <ImageView
      android:id="@+id/imageView11"
      android:layout_width="151dp"
      android:layout_height="130dp"
      android:src="@drawable/time"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.786" />

  <TextView
      android:id="@+id/timer"
      android:layout_width="145dp"
      android:layout_height="62dp"
      android:gravity="center"
      android:textSize="35sp"
      android:textStyle="bold"
      android:text="10"
      app:layout_constraintBottom_toBottomOf="@+id/imageView11"
      app:layout_constraintEnd_toEndOf="@+id/imageView11"
      app:layout_constraintHorizontal_bias="0.166"
      app:layout_constraintStart_toStartOf="@+id/imageView11"
      app:layout_constraintTop_toTopOf="@+id/imageView11"
      app:layout_constraintVertical_bias="0.558" />


  <LinearLayout
      android:id="@+id/linearLayout6"
      android:layout_width="299dp"
      android:layout_height="194dp"
      android:layout_marginBottom="90dp"
      android:background="@drawable/cal_round"
      app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

      <TextView
          android:id="@+id/number1"
          android:layout_width="89dp"
          android:layout_height="103dp"
          android:gravity="center"
          android:text="31"
          android:textColor="@color/white"
          android:textSize="40dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/operation"
          android:layout_width="40dp"
          android:layout_height="103dp"
          android:gravity="center"
          android:text="+"
          android:textColor="@color/white"
          android:textSize="40dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/number2"
          android:layout_width="88dp"
          android:layout_height="103dp"
          android:gravity="center"
          android:text="31"
          android:textColor="@color/white"
          android:textSize="40dp"
          android:textStyle="bold" />
    </LinearLayout>


  </LinearLayout>

  <ImageView
      android:layout_width="132dp"
      android:layout_height="154dp"
      android:layout_marginTop="104dp"
      android:src="@drawable/cal_cat"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/linearLayout6" />


  <GridLayout
      android:id="@+id/gridLayout2"
      android:layout_width="265dp"
      android:layout_height="195dp"
      android:layout_marginBottom="80dp"

      android:columnCount="2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">


    <Button
        android:id="@+id/answer1"
        android:layout_width="122dp"
        android:layout_height="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"

        android:background="@drawable/round"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:text="123"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/answer2"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/answer2"
        android:layout_width="122dp"
        android:layout_height="80dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="20dp"

        android:background="@drawable/round"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:text="123"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="392dp" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="122dp"
        android:layout_height="80dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:text="123"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/answer4"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="494dp" />

    <Button
        android:id="@+id/answer4"
        android:layout_width="122dp"
        android:layout_height="80dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/round"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:text="123"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="494dp" />

  </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>