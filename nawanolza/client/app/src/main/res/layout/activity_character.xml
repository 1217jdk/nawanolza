<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_character"
    tools:context=".CharacterActivity">


    <ImageView
        android:id="@+id/close"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:src="@drawable/close"
        app:layout_constraintBottom_toTopOf="@+id/category_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175" />

    <LinearLayout
        android:id="@+id/category_all"
        android:layout_width="354dp"
        android:layout_height="112dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163">

        <ImageView
            android:layout_width="142dp"
            android:layout_height="100dp"
            android:src="@drawable/category_all"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="71dp" />

        <LinearLayout
            android:id="@+id/category_each"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.202"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.087">

            <LinearLayout
                android:id="@+id/category_1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.202"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.087">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/category_1"
                    tools:layout_editor_absoluteX="63dp"
                    tools:layout_editor_absoluteY="71dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/category_2"
                    tools:layout_editor_absoluteX="63dp"
                    tools:layout_editor_absoluteY="71dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/category_2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.202"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.087">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/category_3"
                    tools:layout_editor_absoluteX="104dp"
                    tools:layout_editor_absoluteY="160dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/category_4"
                    tools:layout_editor_absoluteX="204dp"
                    tools:layout_editor_absoluteY="163dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:layout_width="73dp"
        android:layout_height="29dp"
        android:src="@drawable/dogam_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_all"
        app:layout_constraintVertical_bias="0.01" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="73dp"
        android:layout_height="26dp"
        android:src="@drawable/level_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_all"
        app:layout_constraintVertical_bias="0.011" />

    <LinearLayout
        android:id="@+id/character_all"
        android:layout_width="348dp"
        android:layout_height="451dp"
        android:background="@drawable/category"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.112">

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>