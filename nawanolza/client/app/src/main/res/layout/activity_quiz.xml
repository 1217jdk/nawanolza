<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_background"

    tools:context=".quest.QuizActivity">


    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.253">

        <ImageButton
            android:id="@+id/Obutton"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginRight="10dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/cal_yes"
            app:layout_constraintEnd_toStartOf="@+id/obutton"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="536dp" />

        <ImageButton
            android:id="@+id/Xbutton"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/cal_no"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="536dp" />


    </LinearLayout>



    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/a2"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521" />

    <TextView
        android:id="@+id/title"
        android:layout_width="315dp"
        android:layout_height="179dp"
        android:layout_marginTop="224dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="사람의 5가지 감각(시각, 후각, 미각, 청각, 촉각) 중에서 가장 먼저 나빠지는 감각기관은 시각이다."
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>